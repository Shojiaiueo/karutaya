<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />
	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.kaeruya.action" extends="struts-default">

	<!-- LoginExecuteAction -->
    <action name="LoginExecuteAction" class="com.internousdev.kaeruya.action.LoginExecuteAction" method="execute">
      <result name="success">myPage.jsp</result>
      <result name="error">login.jsp</result>
    </action>

 <!-- LogoutExecuteAction -->
    <action name="LogoutExecuteAction" class="com.internousdev.kaeruya.action.LogoutExecuteAction" method="execute">
      <result name="success">login.jsp</result>
    </action>

<!-- TopAction -->
    <action name="TopAction" class="com.internousdev.kaeruya.action.TopAction" method="execute">
      <result name="success">top.jsp</result>
    </action>


	</package>
</struts>